# =============================================================================
# Jenkins Configuration as Code (CasC) - Generated by Ansible
# =============================================================================

jenkins:
  systemMessage: |
    DevOps Testing App - CI/CD Pipeline
    Environment: {{ environment }}
    Managed by Configuration as Code
    
  numExecutors: 4
  mode: NORMAL
  
  securityRealm:
    local:
      allowsSignup: false
      users:
        - id: "${JENKINS_ADMIN_ID}"
          name: "Administrator"
          password: "${JENKINS_ADMIN_PASSWORD}"
  
  authorizationStrategy:
    loggedInUsersCanDoAnything:
      allowAnonymousRead: false

  remotingSecurity:
    enabled: true

# -----------------------------------------------------------------------------
# Credentials
# -----------------------------------------------------------------------------
credentials:
  system:
    domainCredentials:
      - credentials:
          # Docker Hub
          - usernamePassword:
              scope: GLOBAL
              id: "docker-hub-credentials"
              username: "${DOCKER_HUB_USERNAME}"
              password: "${DOCKER_HUB_TOKEN}"
              description: "Docker Hub credentials"
          
          # GitHub
          - usernamePassword:
              scope: GLOBAL
              id: "github-credentials"
              username: "${GITHUB_USERNAME}"
              password: "${GITHUB_TOKEN}"
              description: "GitHub credentials"
          
          # JIRA
          - usernamePassword:
              scope: GLOBAL
              id: "jira-credentials"
              username: "${JIRA_EMAIL}"
              password: "${JIRA_API_TOKEN}"
              description: "JIRA credentials"
          
          # AWS (as text)
          - string:
              scope: GLOBAL
              id: "aws-access-key"
              secret: "${AWS_ACCESS_KEY_ID}"
              description: "AWS Access Key ID"
          
          - string:
              scope: GLOBAL
              id: "aws-secret-key"
              secret: "${AWS_SECRET_ACCESS_KEY}"
              description: "AWS Secret Access Key"
          
          # App Server SSH Key (will be added manually or via secret)
          - basicSSHUserPrivateKey:
              scope: GLOBAL
              id: "app-server-ssh"
              username: "ec2-user"
              description: "SSH key for App Server"
              privateKeySource:
                directEntry:
                  privateKey: "${APP_SERVER_SSH_KEY:-}"

# -----------------------------------------------------------------------------
# Global Environment Variables
# -----------------------------------------------------------------------------
globalEnvVars:
  env:
    - key: "DOCKER_REGISTRY"
      value: "docker.io"
    - key: "DOCKER_HUB_USERNAME"
      value: "${DOCKER_HUB_USERNAME}"
    - key: "DOCKER_IMAGE"
      value: "${DOCKER_HUB_USERNAME}/devops-testing-app"
    - key: "JIRA_URL"
      value: "${JIRA_URL}"
    - key: "JIRA_PROJECT_KEY"
      value: "${JIRA_PROJECT_KEY}"
    - key: "APP_SERVER_IP"
      value: "${APP_SERVER_IP}"
    - key: "NOTIFICATION_EMAIL"
      value: "${NOTIFICATION_EMAIL}"

# -----------------------------------------------------------------------------
# Unclassified
# -----------------------------------------------------------------------------
unclassified:
  location:
    url: "${JENKINS_URL}"
    adminAddress: "${NOTIFICATION_EMAIL}"

  gitHubPluginConfig:
    hookUrl: "${JENKINS_URL}github-webhook/"

# -----------------------------------------------------------------------------
# Tool Configuration
# -----------------------------------------------------------------------------
tool:
  git:
    installations:
      - name: "Default"
        home: "git"

# -----------------------------------------------------------------------------
# Jobs (Job DSL)
# -----------------------------------------------------------------------------
jobs:
  - script: |
      pipelineJob('devops-testing-app') {
        displayName('DevOps Testing App Pipeline')
        description('CI/CD Pipeline for DevOps Testing Application')
        
        definition {
          cpsScm {
            scm {
              git {
                remote {
                  url('https://github.com/{{ github_username }}/{{ github_repo }}.git')
                  credentials('github-credentials')
                }
                branches('*/main', '*/develop')
              }
            }
            scriptPath('jenkins/Jenkinsfile')
            lightweight(true)
          }
        }
        
        triggers {
          githubPush()
          pollSCM('H/5 * * * *')
        }
        
        properties {
          buildDiscarder {
            strategy {
              logRotator {
                numToKeepStr('10')
              }
            }
          }
        }
      }
